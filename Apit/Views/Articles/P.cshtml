@model ArticleViewModel

@{
    Layout = "_Layout";
    var article = Model;
}

@if (Model.IsMine)
{
<div>
    <a asp-controller="articles" asp-action="edit" asp-route-id="@article.Id">Edit</a>
    <a asp-controller="articles" asp-action="delete" asp-route-id="@article.Id">Delete</a>
</div>
}

<article>
    <h4>
        <span>Topic: </span> @article.Topic?.Name
    </h4>
    <h3>@article.Title</h3>
    <hr>
    <p>@article.HTML</p>
    <hr>
    <span>Created at: @article.DateCreated.ToString(CultureInfo.CurrentCulture)</span>
</article>