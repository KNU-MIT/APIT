@model LoginViewModel

@{
    Layout = "_Layout";
}

<div class="signin">
    <div class="container">
        <div class="signin__inner">

            <h2 class="signin__title title">Увійти у свій аккаунт</h2>

            <div asp-validation-summary="All"></div>

            <form class="register__form" id="signin" method="post"
                  asp-controller="account" asp-action="login"
                  asp-route-returnUrl="@Model.ReturnUrl">

                <div class="form__blck">
                    <picture>
                        <source srcset="img/icons/mail-r.webp" type="image/webp">
                        <img src="img/icons/mail-r.png" alt="">
                    </picture>
                    <input asp-for="Email" class="signin__input" type="email" placeholder="Email">
                </div>

                <div class="form__blck">
                    <picture>
                        <source srcset="img/icons/lock.svg" type="image/webp"><img src="img/icons/lock.svg" alt="">
                    </picture>
                    <input class="signin__input" asp-for="Password" type="password" placeholder="Пароль">
                </div>

                <div class="form__buttons">
                    <button class="signin__button" type="submit">Увійти у кабінет</button>
                    <a class="button signin__button" asp-action="index" asp-controller="home">
                        На головну
                        <picture>
                            <source srcset="img/icons/atom.webp" type="image/webp"><img src="img/icons/atom.png">
                        </picture>
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>