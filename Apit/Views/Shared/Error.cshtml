@model ErrorViewModel

@{
    ViewData["Title"] = $"{ViewData["ErrorTitle"]} | {ViewData["ErrorMessage"]}";
}
}

<div class="profile__inner">

    <h3 class="title__alert">@ViewData["ErrorTitle"]</h3>
    <h3 class="title__alert" style="color: black; font-size: 26px; padding: 10px 17%;">@ViewData["ErrorMessage"]</h3>

    <form class="passrecovery__form form">
        <style>
            .signin__button {
                margin-top: 40px;
                font-size: 24px;
                border-radius: 40px;
                padding: 12px 60px;
                color: #BE0000;
                text-transform: uppercase;
                text-decoration: underline;
            }
            .signin__button:hover {
                text-decoration: none;
                color: black;
            }
        </style>
        <div class="form__buttons">
            <a class="signin__button" asp-controller="home" asp-action="index">На головну</a>
        </div>
    </form>

</div>