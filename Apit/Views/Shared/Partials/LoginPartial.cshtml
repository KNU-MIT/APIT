@{
    var user = signInManager.IsSignedIn(User)
        ? await userManager.GetUserAsync(User)
        : null;
}

<div class="header__register">
    <a class="header__user" asp-controller="account" asp-action="login">
        <picture>
            <source srcset="~/img/icons/user.webp" type="image/webp">
            <img class="header__profile" src="~/img/icons/user.png" alt="">
        </picture>
    </a>

    <div class="header__links">
        @if (user != null)
        {
            <a asp-controller="account" asp-action="index"
               asp-route-x="@user.ProfileAddress" title="Manage">
                @user.FullName
            </a>
        }
        else
        {
            <a class="header__sign" asp-controller="account" asp-action="register">Вхід</a>

            <a class="header__sign" asp-controller="account" asp-action="login">Реєстрація</a>
        }
    </div>
</div>