@{
    var user = signInManager.IsSignedIn(User)
        ? await userManager.GetUserAsync(User)
        : null;
}

<div class="header__register">
    <a class="header__user" asp-controller="account" asp-action="index">
        <picture>
            <source srcset="~/img/icons/user.webp" type="image/webp">
            <img class="header__profile" src="~/img/icons/user.png" alt="">
        </picture>
    </a>

    <div class="header__links" style="position: relative;">
        @if (user != null)
        {
            <a class="header__sign" asp-controller="account" asp-action="index" asp-route-x="@user.ProfileAddress" 
               title="Особистий кабінет. Якщо ви щось не можете знайти, то, скоріш за все, це знаходіться тут">
                @user.FullName
            </a>
        }
        else
        {
            <a class="header__sign" asp-controller="account" asp-action="login"
               style="position: absolute; top: 1px; left: 20px;">Вхід</a>

            <a class="header__sign" asp-controller="account" asp-action="register" 
               style="position: absolute; bottom: 1px; left: 20px;">Реєстрація</a>
        }
    </div>
</div>